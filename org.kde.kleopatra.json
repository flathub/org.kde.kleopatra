{
    "app-id": "org.kde.kleopatra",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.6",
    "sdk": "org.kde.Sdk",
    "command": "kleopatra",
    "rename-icon": "kleopatra",
    "finish-args": [
        "--device=dri",
        "--filesystem=xdg-run/gnupg:ro",
        "--filesystem=~/.gnupg:create",
        "--share=ipc",
