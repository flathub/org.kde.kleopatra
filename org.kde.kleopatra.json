    "runtime-version": "6.7",
    "sdk": "org.kde.Sdk",
    "command": "kleopatra",
    "rename-icon": "kleopatra",
    "finish-args": [
        "--device=dri",
        "--filesystem=xdg-run/gnupg:ro",
        "--filesystem=~/.gnupg:create",
