                    }
                },
                {
                    "type": "shell",
                    "commands": [
                        "cp -p /usr/share/automake-*/config.{sub,guess} ."
                    ]
                }
            ]
        },
        {
            "name": "gpgme",
            "builddir": true,
            "sources": [
