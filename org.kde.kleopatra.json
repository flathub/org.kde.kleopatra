{
    "app-id": "org.kde.kleopatra",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-22.08",
    "sdk": "org.kde.Sdk",
    "command": "kleopatra",
    "rename-icon": "kleopatra",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--share=network",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--filesystem=~/.gnupg:create",
        "--filesystem=xdg-run/gnupg:ro",
