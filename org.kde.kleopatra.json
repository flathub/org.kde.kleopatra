{
    "app-id": "org.kde.kleopatra",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.7",
    "sdk": "org.kde.Sdk",
    "command": "kleopatra",
    "rename-icon": "kleopatra",
    "finish-args": [
        "--device=dri",
        "--filesystem=xdg-run/gnupg:ro",
        "--filesystem=~/.gnupg:create",
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--talk-name=org.kde.StatusNotifierWatcher"
